{% extends 'cpanel/content.html.twig' %}

{% block title %}{{ parent() }} - Добавить новость{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('cpanel.alert.error') }}
    {{ encore_entry_script_tags('cpanel.article') }}
    {{ encore_entry_script_tags('cpanel.datetime') }}
    {{ encore_entry_script_tags('cpanel.page.tinymce') }}

{% endblock %}

{% if form is defined %}
    {% form_theme form with [
        'cpanel/_form_errors.html.twig',
        'cpanel/article/_form_images_entry.html.twig',
        'cpanel/article/_form_radio.html.twig'
    ] %}
{% endif %}

{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('cpanel.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('cpanel.articles') }}">Новости проекта</a></li>
                <li class="breadcrumb-item active">Добавить новость</li>
            </ol>
        {% endblock %}

        {% include 'cpanel/_flashes.html.twig' %}

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    {{ include('cpanel/article/_form.html.twig',{
                        name_sumbit:'Создать новость'
                    }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}