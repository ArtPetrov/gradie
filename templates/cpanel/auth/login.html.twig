{% extends 'base.html.twig' %}
{% block title %}Авторизация{% endblock %}

{% block body %}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-3 px-2 px-sm-5">
                        <div class="brand-logo"></div>
                        <h4>Панель управления</h4>

                        {{ form_start(form,{
                            attr: {
                                class:'pt-3'
                            }
                        }) }}
                            <div class="form-group">
                                {{ form_widget(form.email, {attr: {
                                    placeholder: 'Email',
                                    value: last_username,
                                    class: 'form-control form-control-lg'
                                }}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.password, {attr: {
                                    placeholder: 'Пароль',
                                    class: 'form-control form-control-lg'
                                }}) }}
                            </div>
                            <div class="mt-3">
                                <button  class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Войти</button>
                            </div>
                            <div class="my-3 d-flex justify-content-center ">
                                <div class="form-check ">
                                    <label class="form-check-label text-muted align-content-center">
                                        <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                                        Запомнить меня
                                        <i class="input-helper"></i>
                                    </label>
                                </div>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                {% if error %}
                                    <div>{{ error.messageKey|trans(error.messageData,'security') }}</div>
                                {% endif %}
                            </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
{% endblock %}