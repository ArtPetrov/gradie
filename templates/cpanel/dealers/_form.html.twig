<div class="card-body dashboard-tabs p-0">
    <ul class="nav nav-tabs px-4" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="main-tab" data-toggle="tab" href="#main" role="tab" aria-controls="main"
               aria-selected="true">Основные данные</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="request-tab" data-toggle="tab" href="#request" role="tab"
               aria-controls="request" aria-selected="false">Информация из заявки</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="salons-tab" data-toggle="tab" href="#salons" role="tab" aria-controls="salons"
               aria-selected="false">Список салонов</a>
        </li>
    </ul>
    {{ form_start(form,{
        attr: {
            class:'forms-sample'
        }
    }) }}

    <div class="tab-content py-0 px-0">
        <div class="tab-pane fade active show" id="main" role="tabpanel" aria-labelledby="main-tab">
            <div class=" m-5">

                <div class="form-group">
                    <label for="exampleSelectCategory">Категория дилера:</label>
                    {{ form_widget(form.category, {attr: {
                        id: 'exampleSelectCategory',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.category) }}

                <div class="form-group">
                    <label for="exampleSelectManager">Назначить менеджера:</label>
                    {{ form_widget(form.manager, {attr: {
                        id: 'exampleSelectManager',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.manager) }}

                <div class="form-group">
                    <label for="exampleInputName">ФИО:</label>
                    {{ form_widget(form.name, {attr: {
                        id: 'exampleInputName',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.name) }}
                <div class="form-group">
                    <label for="exampleInputEmail">Email адрес:</label>
                    {{ form_widget(form.email, {attr: {
                        id: 'exampleInputEmail',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.email) }}

                <div class="form-group">
                    <label for="exampleInputPhone">Телефон:</label>
                    {{ form_widget(form.phone, {attr: {
                        id: 'exampleInputPhone',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.phone) }}

                <div class="form-group">
                    <label for="exampleInputSite">Веб-сайт:</label>
                    {{ form_widget(form.site, {attr: {
                        id: 'exampleInputSite',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.site) }}

                <div class="form-group">
                    <label for="exampleContragent">Контрагент:</label>
                    {{ form_widget(form.contrahens, {attr: {
                        id: 'exampleContragent',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.contrahens) }}

                <div class="form-group">
                    <label for="exampleInputAddress">Адрес:</label>
                    {{ form_widget(form.address, {attr: {
                        id: 'exampleInputAddress',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.address) }}


                <div class="form-group">
                    <label for="exampleInputInn">ИНН:</label>
                    {{ form_widget(form.inn, {attr: {
                        id: 'exampleInputInn',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.inn) }}

                <div class="form-group">
                    <label for="exampleInputKpp">КПП:</label>
                    {{ form_widget(form.kpp, {attr: {
                        id: 'exampleInputKpp',
                        class: 'form-control'
                    }}) }}
                </div>
                {{ form_errors(form.kpp) }}

                <div class="form-check form-check-flat form-check-primary mt-2 mb-4">
                    <label class="form-check-label">
                        {{ form_widget(form.notification, {attr: {
                            class: 'form-check-input'
                        }}) }}
                        Хочу получать рассылку на электронный ящик
                        <i class="input-helper"></i></label>
                </div>
                {{ form_errors(form.notification) }}

            </div>
        </div>

        <div class="tab-pane fade" id="request" role="tabpanel" aria-labelledby="request-tab">
            <div class=" m-5">
                <div class="form-group">
                    <label for="inputCompany">Название организации:</label>
                    {{ form_widget(form.company, {attr: {
                        id: 'inputCompany',
                        class: 'form-control',
                        readonly: true
                    }}) }}
                </div>
                {{ form_errors(form.company) }}

                <div class="form-group">
                    <label for="inputCity">Город:</label>
                    {{ form_widget(form.city, {attr: {
                        id: 'inputCity',
                        class: 'form-control',
                        readonly: true
                    }}) }}
                </div>
                {{ form_errors(form.city) }}

                <div class="form-group">
                    <label for="inputLeader">Ф. И. О. руководителя:</label>
                    {{ form_widget(form.leader, {attr: {
                        id: 'inputLeader',
                        class: 'form-control',
                        readonly: true
                    }}) }}
                </div>
                {{ form_errors(form.leader) }}

                <div class="form-group">
                    <label for="inputProfile">Профиль деятельности, способ реализации:</label>
                    {{ form_widget(form.profile, {attr: {
                        id: 'inputProfile',
                        class: 'form-control',
                        readonly: true
                    }}) }}
                </div>
                {{ form_errors(form.profile) }}

                <div class="form-group">
                    <label for="inputWhyWe">Чем вас заинтересовала продукция Gardie?</label>
                    {{ form_widget(form.why_we, {attr: {
                        id: 'inputWhyWe',
                        class: 'form-control',
                        rows: '5',
                        readonly: true
                    }}) }}
                </div>
                {{ form_errors(form.why_we) }}

                <div class="form-group">
                    <label for="inputHowKnow">Как вы узнали о Gardie?</label>
                    {{ form_widget(form.how_know, {attr: {
                        id: 'inputHowKnow',
                        class: 'form-control',
                        rows: '5',
                        readonly: true
                    }}) }}
                </div>
                {{ form_errors(form.how_know) }}

                <div class="form-group">
                    <label for="inputExp">Имеется ли опыт работы с аналогичной продукцией (если да, то с каким
                        брендом)?</label>
                    {{ form_widget(form.experience, {attr: {
                        id: 'inputExp',
                        class: 'form-control',
                        rows: '5',
                        readonly: true
                    }}) }}
                </div>
                {{ form_errors(form.experience) }}

            </div>
        </div>

        <div class="tab-pane fade" id="salons" role="tabpanel" aria-labelledby="salons-tab">
            <div class=" m-5">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Название салона</th>
                        <th>Адрес</th>
                        <th>Действие</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ownership in dealer.getSalons()%}
                    <tr>
                        <td><a href="{{ path('cpanel.salon',{id:ownership.salon.id}) }}">{{ ownership.salon.info.name }}</a></td>
                        <td>{{ ownership.salon.info.address  }}</td>
                        <td>
                            <button type="button" data-path="{{ path('cpanel.salon.remove.dealer', {id:ownership.id}) }}"
                                    data-parent="tr"
                                    class="btn btn-sm btn-danger delete-element">
                                Отвязать
                            </button>
                        </td>
                    </tr>
                        {% else %}
                        <tr>
                            <td colspan="3" class="text-center">
                                <b>У дилера нет салонов.</b>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<button type="submit" class="btn btn-primary ml-auto mr-auto mb-5">{{ name_sumbit }}</button>

{{ form_end(form) }}

