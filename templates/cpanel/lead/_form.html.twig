<div class="card-body dashboard-tabs p-0">
    <ul class="nav nav-tabs px-4" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="main-tab" data-toggle="tab" href="#main" role="tab" aria-controls="main"
               aria-selected="true">Заявка на прайс</a>
        </li>
    </ul>

    {{ form_start(form,{
        attr: {
            class:'forms-sample',
        }
    }) }}


    <div class="tab-content py-0 px-0">

        <div class="tab-pane fade active show" id="main" role="tabpanel" aria-labelledby="main-tab">
            <div class=" m-5">

                <button type="submit" class="btn btn-primary d-none">{{ name_sumbit }}</button>
                <h5>Тип заявки: {{ lead.type.type }}</h5>
                <p class="card-description">
                    Дата заявки: {{ lead.createdAt|date('d.m.Y H:i') }}<br>
                    Дата просмотра: {{ lead.updatedAt|date('d.m.Y H:i') }}
                </p>

                <p class="card-description mt-5 mb-4">
                    <b>Контактная информация:</b>
                </p>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputContent">Ф.И.О:</label>
                            {{ form_widget(form.name, {attr: {
                                class: 'form-control',
                                id: 'inputFullName',
                                readonly: true
                            }}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="inputPhone">Телефон:</label>
                            {{ form_widget(form.phone, {attr: {
                                id: 'inputPhone',
                                class: 'form-control',
                                readonly: true
                            }}) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="inputEmail">Email:</label>
                            {{ form_widget(form.email, {attr: {
                                class: 'form-control',
                                id: 'inputEmail',
                                readonly: true
                            }}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="inputCity">Город:</label>
                            {{ form_widget(form.city, {attr: {
                                id: 'inputCity',
                                class: 'form-control',
                                readonly: true
                            }}) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="text-center mt-5 mb-4">
        <input type="hidden" name="token_csrf" value="{{ csrf_token('any') }}"/>
    </div>
    {{ form_end(form) }}
</div>
