{% extends 'cpanel/content.html.twig' %}

{% form_theme form _self %}

{%- block checkbox_label -%} {%- endblock checkbox_label -%}
{%- block checkbox_widget -%}
    <div class="form-check ml-4">
        <label class="form-check-label">
            <input type="checkbox" class="form-check-input" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
            {{ label }}
            <i class="input-helper"></i></label>
    </div>
{%- endblock checkbox_widget -%}


{% block title %}{{ parent() }} - Создать рассылку{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('mailer.tinymce') }}
    {{ encore_entry_script_tags('mailer.files') }}
    {{ encore_entry_script_tags('mailer') }}
{% endblock %}
{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('cpanel.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('cpanel.mailers') }}">Рассылки</a></li>
                <li class="breadcrumb-item active">Создать рассылку</li>
            </ol>
        {% endblock %}
        {% include 'cpanel/_flashes.html.twig' %}

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">

                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Создать рассылку</h2>
                        <p class="card-description"></p>
                        {{ include('cpanel/mailer/_form.html.twig',{
                            name_sumbit:'Создать рассылку'
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}