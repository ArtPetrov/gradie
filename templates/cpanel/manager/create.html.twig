{% extends 'cpanel/content.html.twig' %}

{% block title %}{{ parent() }} - Добавить менеджера{% endblock %}

{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('cpanel.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('cpanel.managers') }}">Менеджеры</a></li>
                <li class="breadcrumb-item active">Добавить менеджера</li>
            </ol>
        {% endblock %}
        {% include 'cpanel/_flashes.html.twig' %}

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">

                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Добавить менеджера</h2>
                        <p class="card-description"></p>
                        {{ include('cpanel/manager/_form.html.twig',{
                            name_sumbit:'Добавить менеджера'
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}