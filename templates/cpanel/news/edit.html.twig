{% extends 'cpanel/content.html.twig' %}

{% block title %}{{ parent() }} - Редактировать новость{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('cpanel.tinymce') }}
    {{ encore_entry_script_tags('cpanel.datetime') }}
{% endblock %}
{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('cpanel.index') }}">Главная</a></li>
                <li class="breadcrumb-item active">Редактировать новость</li>
            </ol>
        {% endblock %}
        {% include 'cpanel/_flashes.html.twig' %}

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">

                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Редактировать новость</h2>
                        <p class="card-description"></p>
                        {{ include('cpanel/news/_form.html.twig',{
                            name_sumbit:'Изменить новость'
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}