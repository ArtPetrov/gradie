{% extends 'cpanel/content.html.twig' %}

{% block title %}{{ parent() }} - Добавить вопрос к опросу{% endblock %}

{% if form is defined %}
    {% form_theme form with [
        'cpanel/_form_errors.html.twig',
        'cpanel/quiz/_form_checkbox.html.twig'
    ] %}
{% endif %}

{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('cpanel.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('cpanel.quizs') }}">Опросы</a></li>
                <li class="breadcrumb-item"><a href="{{ path('cpanel.quiz.questions',{'id':quiz.id}) }}">{{quiz.name}}</a></li>
                <li class="breadcrumb-item active">Добавить вопрос</li>
            </ol>
        {% endblock %}
        {% include 'cpanel/_flashes.html.twig' %}

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Добавить вопрос</h2>
                        <p class="card-description"></p>
                        {{ include('cpanel/quiz/_form_quest.html.twig',{
                            name_sumbit:'Добавить вопрос'
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}