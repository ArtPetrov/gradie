{{ form_start(form,{
    attr: {
        class:'forms-sample',
        autocomplete:'off'
    }
}) }}

<div class="row">

    <div class="col-6">

        <div class="form-group row mb-1">
            <label class="col-3 col-form-label">Тип салона:</label>
            <div class="col-9">
                {{ form_widget(form.type, {attr: {
                    class: 'form-control',
                    id: 'typeSalon'
                }}) }}
                {{ form_errors(form.type) }}
            </div>
        </div>

        <div class="form-group mb-2">
            <label for="form_info_address">Адрес салона</label>
            {{ form_widget(form.info.address, {attr: {
                class: 'form-control',
                id: 'form_info_address',
                autocomplete:'off'
            }}) }}
            {{ not_equal_infromation(salon.info.address,moderation.info.address) }}
            {{ form_errors(form.info.address) }}
        </div>
        <div class="text-right">
            <a data-toggle="collapse" href="#coords" role="button" aria-expanded="false" aria-controls="coords">Координаты</a>
            <div class="row collapse show" id="coords">
                <div class="form-group col-6 p-3 pl-5">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">LAT</span>
                        </div>
                        {{ form_widget(form.coords.lat, {attr: {
                            class: 'form-control',
                            id: 'coordsLat'
                        }}) }}
                    </div>
                    {{ form_errors(form.coords.lat) }}
                </div>
                <div class="form-group col-6 p-3 pr-5">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">LON</span>
                        </div>
                        {{ form_widget(form.coords.lon, {attr: {
                            class: 'form-control',
                            id: 'coordsLon'
                        }}) }}
                    </div>
                    {{ form_errors(form.coords.lat) }}
                </div>
            </div>
        </div>

        <div class="form-group mb-2">
            <label>Дилер салона</label>
            {{ form_widget(form.dealer.name, {attr: {
                class: 'form-control',
                'data-path': path('cpanel.dealers.search')
            }}) }}
            {{ form_errors(form.dealer.name) }}
            {{ form_widget(form.dealer.id, {attr: {
                class: 'form-control',
            }}) }}
        </div>


    </div>
    <div class="col-6">
        <div id="map" class="w-100" style="height: 250px"></div>
    </div>

</div>
<p class="card-description mt-3">Информация о салоне:</p>
<div class="row">
    <div class="col-6">
        <div class="form-group ">
            <label>Название салона</label>
            {{ form_widget(form.info.name, {attr: {
                class: 'form-control',
            }}) }}
            {{ not_equal_infromation(salon.info.name,moderation.info.name) }}

            {{ form_errors(form.info.name) }}
        </div>
    </div>
    <div class="col-6">
        <div class="form-group">
            <label>Телефон для связи</label>
            {{ form_widget(form.info.phone, {attr: {
                class: 'form-control',
            }}) }}
            {{ not_equal_infromation(salon.info.phone,moderation.info.phone) }}
            {{ form_errors(form.info.phone) }}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <div class="form-group ">
            <label>Email-адрес:</label>
            {{ form_widget(form.info.email, {attr: {
                class: 'form-control',
            }}) }}
            {{ not_equal_infromation(salon.info.email,moderation.info.email) }}
            {{ form_errors(form.info.email) }}
        </div>
    </div>
    <div class="col-6">
        <div class="form-group">
            <label>Веб-сайт</label>
            {{ form_widget(form.info.site, {attr: {
                class: 'form-control',
            }}) }}
            {{ not_equal_infromation(salon.info.site,moderation.info.site) }}
            {{ form_errors(form.info.site) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <div class="form-group ">
            <label>Режим работы:</label>
            {{ form_widget(form.info.timetable, {attr: {
                class: 'form-control',
            }}) }}
            {{ not_equal_infromation(salon.info.timetable,moderation.info.timetable) }}
            {{ form_errors(form.info.timetable) }}
        </div>
    </div>
    <div class="col-8">
        <div class="form-group ">
            <label>Дополнительная информация:</label>
            {{ form_widget(form.info.comment, {attr: {
                class: 'form-control',
            }}) }}
            {{ not_equal_infromation(salon.info.comment,moderation.info.comment) }}
            {{ form_errors(form.info.comment) }}
        </div>
    </div>
</div>

<div class="row ">
    <button type="submit" class="btn btn-primary mr-auto ml-auto mt-4 mb-2">{{ name_sumbit }}</button>
</div>
{{ form_end(form) }}