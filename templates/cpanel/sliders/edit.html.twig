{% extends 'cpanel/content.html.twig' %}

{% block title %}{{ parent() }} - Редактировать слайд{% endblock %}

{% if form is defined %}
    {% form_theme form with [
        'cpanel/_form_errors.html.twig',
        'cpanel/sliders/_form_checkbox.html.twig'
    ] %}
{% endif %}

{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('cpanel.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('cpanel.sliders',{type:type}) }}">Слайдеры</a></li>
                <li class="breadcrumb-item active">Редактировать слайд</li>
            </ol>
        {% endblock %}

        {% include 'cpanel/_flashes.html.twig' %}

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    {{ include('cpanel/sliders/_form_edit.html.twig',{
                        name_sumbit:'Редактировать слайд'
                    }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}