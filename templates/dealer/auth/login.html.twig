{% extends 'dealer/auth/_content.html.twig' %}
{% block title %}Авторизация в кабинет дилера{% endblock %}
{% block content_photo %}login-half-bg{% endblock %}
{% block content %}
    <div class="auth-form-transparent text-left p-3">
        <div class="brand-logo">
        </div>
        <h4>Авторизация</h4>
        <h6 class="font-weight-light">в личный кабинет дилера.</h6>
        <div class="mt-3">
            {% include 'dealer/_flashes.html.twig' %}
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData,'dealer') }}
                </div>
            {% endif %}
        </div>
        {{ form_start(form,{
            attr: {
                class:'pt-3'
            }
        }) }}

        <div class="form-group">
            <label for="exampleInputEmail">Email</label>
            <div class="input-group">
                <div class="input-group-prepend bg-transparent">
                                      <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-account-outline text-primary"></i>
                                      </span>
                </div>
                {{ form_widget(form.email, {attr: {
                    placeholder: 'Email',
                    value: last_username,
                    class: 'form-control form-control-lg border-left-0',
                    id: 'exampleInputEmail'
                }}) }}
            </div>
        </div>

        <div class="form-group">
            <label for="exampleInputPassword">Пароль</label>
            <div class="input-group">
                <div class="input-group-prepend bg-transparent">
                                      <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-lock-outline text-primary"></i>
                                      </span>
                </div>
                {{ form_widget(form.password, {attr: {
                    placeholder: 'Пароль',
                    class: 'form-control form-control-lg border-left-0',
                    id: 'exampleInputPassword'
                }}) }}
            </div>
        </div>

        <div class="my-2 d-flex justify-content-between align-items-center">
            <div class="form-check">
                <label class="form-check-label text-muted">
                    <input type="checkbox" class="form-check-input" name="_remember_me">
                    Запомнить меня
                </label>
            </div>
            <a href="{{ path('dealer.reset') }}" class="auth-link text-black">Забыли пароль?</a>
        </div>

        <div class="mt-3">
            <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"
                    type="submit">Войти
            </button>
        </div>

        <div class="text-center mt-4 font-weight-light">
            Нет аккаунта? <a href="{{ path('dealer.signup') }}" class="text-primary">Подать заявку на
                дилерство!</a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}