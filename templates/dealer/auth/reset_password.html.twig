{% extends 'dealer/auth/_content.html.twig' %}
{% block title %}Восстановить пароль{% endblock %}
{% block content_photo %}login-half-bg{% endblock %}
{% block content %}
<div class="auth-form-transparent text-left p-3">
    <div class="brand-logo">
    </div>
    <h4>Восстановить пароль</h4>
    <h6 class="font-weight-light">от личного кабинета дилера.</h6>
    <div class="mt-3">
        {% include 'dealer/_flashes.html.twig' %}
    </div>
    {{ form_start(form,{
        attr: {
            class:'pt-3'
        }
    }) }}

    <div class="form-group">
        <label for="exampleInputEmail">Email</label>
        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
              <span class="input-group-text bg-transparent border-right-0">
                <i class="mdi mdi-account-outline text-primary"></i>
              </span>
            </div>
            {{ form_widget(form.email, {attr: {
                placeholder: 'Email',
                class: 'form-control form-control-lg border-left-0',
                id: 'exampleInputEmail'
            }}) }}
        </div>
    </div>


    <div class="mt-3">
        <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"
                type="submit">Восстановить пароль
        </button>
    </div>

    <div class="text-center mt-4 font-weight-light">
        Вспомнили пароль? <a href="{{ path('dealer.login') }}" class="text-primary">Авторизоваться!</a>
    </div>

    {{ form_end(form) }}


</div>
{% endblock %}