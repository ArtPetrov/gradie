{% extends 'dealer/content.html.twig' %}

{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('dealer.index') }}">Главная</a></li>
                <li class="breadcrumb-item active">Файлы дилера</li>
            </ol>
        {% endblock %}

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Список файлов</h3>
                        <p class="card-description">Здесь находится: документация, прайсы, инструкции.</p>
                        <table class="table table-striped">
                            <tr>
                                <td><b>Название файла</b></td>
                                <td class="text-right"><b>Дата создания</b></td>
                            </tr>
                            {% for link in files %}
                                <tr>
                                    <td>
                                        <a href="{{ path('dealer.file',{id:link.file.id}) }}"> {{ link.file.originalFilename }}</a>
                                    </td>
                                    <td class="text-right">
                                        <label class="badge badge-success">{{ link.file.createdAt|date("d.m.Y H:s") }}</label>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2">Файлы отсутствуют.</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}