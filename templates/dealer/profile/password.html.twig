{% extends 'dealer/content.html.twig' %}

{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('dealer.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('dealer.profile') }}">Ваш профиль</a></li>
                <li class="breadcrumb-item active">Настройки безопасности</li>
            </ol>
        {% endblock %}

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Редактировать пароль</h3>
                        <p class="card-description"></p>
                        <div class="mt-3">
                            {% include 'dealer/_flashes.html.twig' %}
                        </div>
                        {{ form_start(form,{
                            attr: {
                                class:'forms-sample'
                            }
                        }) }}

                        <div class="form-group">
                            <label for="exampleInputPassword">Новый пароль:</label>
                            {{ form_widget(form.password, {attr: {
                                id: 'exampleInputPassword',
                                class: 'form-control'
                            }}) }}
                        </div>
                        {{ form_errors(form.password) }}

                        <div class="form-group">
                            <label for="exampleInputEmail">Повторите пароль:</label>
                            {{ form_widget(form.repeatPassword, {attr: {
                                id: 'exampleInputEmail',
                                class: 'form-control'
                            }}) }}
                        </div>
                        {{ form_errors(form.repeatPassword) }}


                        <button type="submit" class="btn btn-primary mr-2">Изменить пароль</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}