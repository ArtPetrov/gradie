{{ form_start(form,{
    attr: {
        class:'forms-sample',
        autocomplete:'off'
    }
}) }}

<div class="row">
    <div class="col-6">
        <p class="card-description mt-3">Текущая информация о салоне:</p>
        <div class="form-group mb-2">
            <label for="form_info_address">Адрес салона</label>
            {{ form_widget(form.info.address, {attr: {
                class: 'form-control',
                id: 'form_info_address',
                autocomplete:'off'
            }}) }}
            {{ form_errors(form.info.address) }}
        </div>

        <div class="form-group ">
            <label>Название салона</label>
            {{ form_widget(form.info.name, {attr: {
                class: 'form-control',
            }}) }}
            {{ form_errors(form.info.name) }}
        </div>

        <div class="form-group ">
            <label>Режим работы:</label>
            {{ form_widget(form.info.timetable, {attr: {
                class: 'form-control',
            }}) }}
            {{ form_errors(form.info.timetable) }}
        </div>

        <div class="form-group">
            <label>Телефон для связи</label>
            {{ form_widget(form.info.phone, {attr: {
                class: 'form-control',
            }}) }}
            {{ form_errors(form.info.phone) }}
        </div>

        <div class="form-group ">
            <label>Email-адрес:</label>
            {{ form_widget(form.info.email, {attr: {
                class: 'form-control',
            }}) }}
            {{ form_errors(form.info.email) }}
        </div>

        <div class="form-group">
            <label>Веб-сайт</label>
            {{ form_widget(form.info.site, {attr: {
                class: 'form-control',
            }}) }}
            {{ form_errors(form.info.site) }}
        </div>

        <div class="form-group ">
            <label>Дополнительная информация:</label>
            {{ form_widget(form.info.comment, {attr: {
                class: 'form-control',
            }}) }}
            {{ form_errors(form.info.comment) }}
        </div>

        <div class="form-group ">
            <label>Причина редактирования:</label>
            {{ form_widget(form.comment, {attr: {
                class: 'form-control',
            }}) }}
            {{ form_errors(form.comment) }}
        </div>
    </div>

    <div class="col-6 {% if moderation==false %} d-none{% endif %}">
        <p class="card-description mt-3">Ожидает проверки модератором:</p>
        <div class="form-group mb-2">
            <label for="form_info_address">Адрес салона</label>
            {{ form_widget(form.moderation.address, {attr: {
                class: 'form-control',
                readonly: true,
                id: 'form_info_address',
                autocomplete:'off'
            }}) }}
            {{ form_errors(form.moderation.address) }}
        </div>

        <div class="form-group ">
            <label>Название салона</label>
            {{ form_widget(form.moderation.name, {attr: {
                class: 'form-control',
                readonly: true,
            }}) }}
            {{ form_errors(form.moderation.name) }}
        </div>

        <div class="form-group ">
            <label>Режим работы:</label>
            {{ form_widget(form.moderation.timetable, {attr: {
                class: 'form-control',
                readonly: true,
            }}) }}
            {{ form_errors(form.moderation.timetable) }}
        </div>

        <div class="form-group">
            <label>Телефон для связи</label>
            {{ form_widget(form.moderation.phone, {attr: {
                class: 'form-control',
                readonly: true,
            }}) }}
            {{ form_errors(form.moderation.phone) }}
        </div>

        <div class="form-group ">
            <label>Email-адрес:</label>
            {{ form_widget(form.moderation.email, {attr: {
                class: 'form-control',
                readonly: true,
            }}) }}
            {{ form_errors(form.moderation.email) }}
        </div>

        <div class="form-group">
            <label>Веб-сайт</label>
            {{ form_widget(form.moderation.site, {attr: {
                class: 'form-control',
                readonly: true,
            }}) }}
            {{ form_errors(form.moderation.site) }}
        </div>

        <div class="form-group ">
            <label>Дополнительная информация:</label>
            {{ form_widget(form.moderation.comment, {attr: {
                class: 'form-control',
                readonly: true,
            }}) }}
            {{ form_errors(form.moderation.comment) }}
        </div>

        <div class="form-group ">
            <label>Причина редактирования:</label>
            {{ form_widget(form.moderationComment, {attr: {
                class: 'form-control',
                readonly: true,
            }}) }}
            {{ form_errors(form.moderationComment) }}
        </div>
    </div>

</div>

<div class="row ">
    <button type="submit" class="btn btn-primary mr-auto ml-auto mt-4 mb-2">{{ name_sumbit }}</button>
</div>
{{ form_end(form) }}