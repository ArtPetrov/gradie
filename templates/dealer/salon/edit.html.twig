{% extends 'dealer/content.html.twig' %}

{% block title %}{{ parent() }} - Редактировать салон{% endblock %}

{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('dealer.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('dealer.salons') }}">Салоны</a></li>
                <li class="breadcrumb-item active">Редактировать салон</li>
            </ol>
        {% endblock %}
