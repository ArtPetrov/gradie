{% extends 'dealer/content.html.twig' %}

{% block title %}{{ parent() }} - Служба поддержки{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ticket.tinymce') }}
{% endblock %}
{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('dealer.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('dealer.tickets') }}">Служба поддержки</a></li>
                <li class="breadcrumb-item active">Задать вопрос</li>
            </ol>
        {% endblock %}
        {% include 'dealer/_flashes.html.twig' %}

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">

                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Ваше обращение</h2>
                        <p class="card-description mb-2"></p>
                        {{ include('dealer/ticket/_form.html.twig',{
                            name_sumbit:'Задать вопрос'
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}