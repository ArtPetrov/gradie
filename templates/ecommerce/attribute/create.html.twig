{% extends 'ecommerce/content.html.twig' %}

{% block title %}{{ parent() }} - Создать атрибут{% endblock %}

{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('cpanel.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('ecommerce.index') }}">Магазин</a></li>
                <li class="breadcrumb-item"><a href="{{ path('ecommerce.attributes') }}">Атрибуты</a></li>
                <li class="breadcrumb-item active">Новый атрибут</li>
            </ol>
        {% endblock %}
        {% include 'ecommerce/_flashes.html.twig' %}

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Новый атрибут</h2>
                        <p class="card-description mb-2"></p>
                        {{ include('ecommerce/attribute/_form.html.twig',{
                            name_sumbit:'Создать атрибут'
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}