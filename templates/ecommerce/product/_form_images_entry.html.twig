{% block _form_images_entry_widget %}
    <div class="image col-xl-3 col-lg-4 col-sm-6 col-12 mb-4 hover-cursor">
        <div style="width: 200px;height: 200px; background-image: url('__src__'); background-repeat: no-repeat; background-position: center"></div>
        <div class="form-check">
            {{ form_widget(form.cover, {
                label: 'Обложка товара'
            }) }}
        </div>
        <button type="button" class="btn btn-danger btn-sm remove-image">Удалить фотографию</button>
        {{ form_row(form.src) }}
        {{ form_row(form.id) }}
    </div>
{% endblock %}