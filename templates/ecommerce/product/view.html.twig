{% extends 'ecommerce/content.html.twig' %}

{% form_theme form 'ecommerce/product/_form_checkbox.html.twig' %}

{% block title %}{{ parent() }} - Редактировать товар{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ecommerce.product.tinymce') }}
    {{ encore_entry_script_tags('cpanel.datetime') }}
{% endblock %}

{% block content %}
    <div class="content-wrapper">
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('cpanel.index') }}">Главная</a></li>
                <li class="breadcrumb-item"><a href="{{ path('ecommerce.index') }}">Магазин</a></li>
                <li class="breadcrumb-item"><a href="{{ path('ecommerce.products') }}">Товары</a></li>
                <li class="breadcrumb-item active">Редактировать товар #{{ product.info.article }}</li>
                <li class="ml-auto">[<a href="{{ path('product',{id:product.id}) }}"  target="_blank" >
                    Перейти на страницу товара
                </a>]</li>
            </ol>
        {% endblock %}
        {% include 'ecommerce/_flashes.html.twig' %}

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    {{ include('ecommerce/product/_form.html.twig',{
                        name_sumbit:'Редактировать товар'
                    }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}