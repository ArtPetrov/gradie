                                                            </tr>
                                                        </table>
                                                        <table cellspacing="0" cellpadding="0" border="0" width="100%">
                                                            <tr>
                                                                <td width="175" class="pb5 td-w-200" style="padding-bottom: 5px;font-family: Arial, Helvetica, sans-serif; font-size: 12px; font-weight: normal; line-height: normal; mso-height-rule: exactly; text-align: left;">Арт. {{ product.article }}</td>
                                                                <td width="175" class="pb5 red td-w-50" style="color: #f55d78; padding-bottom: 5px;font-family: Arial, Helvetica, sans-serif; font-size: 12px; font-weight: normal; line-height: normal; mso-height-rule: exactly; text-align: right;">{{ product.price|number_format(2, '.',' ') }} р.</td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                    <td width="50" class="pt8 pr5 pb6 pl5 table-body" style="background-color: #ffffff; border-bottom: 1px solid #eef2f5; color: #000000; font-family: Arial, Helvetica, sans-serif; font-size: 12px; font-weight: normal; line-height: normal; mso-height-rule: exactly; padding-bottom: 6px; padding-left: 5px; padding-right: 5px; padding-top: 8px; text-align: center;">х{{ product.count }}</td>
