                                        {% if  order.address.type is not null %}
                                            <span class="black" style="color: #000000;">Доставка: </span>
                                            {% if order.address.type=='moscow' %}
                                                г. {{ order.address.fields['city']|default('Не указан') }}{% if order.address.fields['address'] is not null %}, {{ order.address.fields['address'] }}{% endif %} (курьером)
